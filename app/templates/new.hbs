<div class="new-animal-form">
    {{input type="text" placeholder="Your pets name" value=name class="name-input"}}
    {{input type="text" placeholder="Describe your pet" value=description class="description-input"}}
    {{input type="date" placeholder="When did he/she go missing?" value=date class="date-input"}}
    {{input type="text" placeholder="Latitude" value=lat class="lat-input"}}
    {{input type="text" placeholder="Longitude" value=long class="long-input"}}
    <button {{action 'addAnimal'}} class="submit">Add pet</button>
</div>
